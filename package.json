{
	"name": "html-to-pdf",
	"version": "1.0.0",
	"description": "Converting HTML template to PDF files",
	"private": true,
	"main": "src/index.js",
	"scripts": {
		"start": "nodemon .",
		"linter": "run-p eslint stylelint htmlhint",
